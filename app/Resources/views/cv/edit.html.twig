{% extends 'base.html.twig' %}

{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Modifier votre CV : {{ cv.cv }}</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(edit_form) }}
                        {{ form_widget(edit_form) }}
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Modifier" />
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-md-8 col-md-offset-4">
        <div class="col-md-3">
            <a class="btn btn-lg btn-info btn-block" href="{{ path('fos_user_profile_show') }}">Retour Ã  mon profil</a>
        </div>
        <div class="col-md-3">
            {{ form_start(delete_form) }}
            <input class="btn btn-lg btn-danger btn-block" type="submit" value="Supprimer mon CV">
            {{ form_end(delete_form) }}
        </div>
    </div>
</div>


{% endblock %}
