{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cvs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Cv</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
                <td><a href="{{ path('cv_show', { 'id': cv.id }) }}">{{ cv.id }}</a></td>
                <td>{{ cv.user }}</td>
                <td>{{ cv.cv }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cv_show', { 'id': cv.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cv_edit', { 'id': cv.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cv_new') }}">Create a new cv</a>
        </li>
    </ul>
{% endblock %}
